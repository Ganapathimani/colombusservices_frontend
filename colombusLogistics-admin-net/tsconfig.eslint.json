{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "incremental": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".eslintrc.cjs",
        "vite.config.mjs"
    ],
    "exclude": [
        "**/node_modules"
    ],
  }
  